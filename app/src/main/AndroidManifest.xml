<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.bme.aut.eonvis">

    <application
        android:name=".EonVisApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EonVis">
        <activity
            android:name=".ui.tags.DetailsTagActivity"
            android:exported="false"
            android:label="@string/title_activity_datails_tag"
            android:theme="@style/Theme.EonVis" />
        <activity
            android:name=".ui.details.DetailsComposeActivity"
            android:exported="false"
            android:label="@string/title_activity_details_compose"
            android:theme="@style/Theme.EonVis" />
        <activity
            android:name=".ui.main.MainComposeActivity"
            android:exported="false"
            android:label="@string/title_activity_main_compose"
            android:theme="@style/Theme.EonVis" />
        <activity
            android:name=".ui.details.DetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>